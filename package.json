{
	"name": "ts-lib-starter",
	"version": "0.0.0",
	"type": "module",
	"description": "boilerplate for your next TypeScript library",
	"main": "dist/index.cjs",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/index.js",
			"default": "./dist/index.cjs"
		}
	},
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"format": "dprint fmt",
		"lint": "run-p lint:*",
		"lint:format": "dprint check",
		"lint:types": "tsc",
		"lint:js": "eslint .",
		"prepare": "husky install",
		"prepublishOnly": "pnpm build",
		"test": "vitest"
	},
	"devDependencies": {
		"@babel/core": "7.18.5",
		"@sachinraja/eslint-config": "0.1.1",
		"@trpc/client": "10.0.0-alpha.25",
		"@trpc/server": "10.0.0-alpha.25",
		"@types/babel__core": "7.1.19",
		"@types/express": "4.17.13",
		"@types/node": "18.0.0",
		"babel-plugin-spectypes": "^2.1.3",
		"dprint": "0.29.1",
		"eslint": "8.16.0",
		"husky": "8.0.1",
		"nano-staged": "0.8.0",
		"npm-run-all": "4.1.5",
		"superjson": "1.9.1",
		"tsup": "6.0.1",
		"tsx": "3.4.2",
		"typescript": "4.7.2",
		"undici": "5.5.1",
		"vite": "2.9.9",
		"vitest": "0.13.1",
		"zod": "3.17.3"
	},
	"sideEffects": false,
	"nano-staged": {
		"*.{js,ts,md,json,yaml}": "dprint fmt"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"format": [
			"esm",
			"cjs"
		],
		"dts": {
			"resolve": true
		},
		"splitting": true,
		"clean": true
	},
	"packageManager": "pnpm@7.2.0",
	"dependencies": {
		"@ts-morph/bootstrap": "^0.16.0",
		"ts-morph": "^15.1.0",
		"ts-to-zod": "^1.11.0",
		"typezer": "^0.9.26",
		"zod-to-json-schema": "^3.17.0"
	}
}
